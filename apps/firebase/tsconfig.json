{
  "compilerOptions": {
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
    "lib": ["ES2020"],
    "module": "commonjs",
    "strict": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "target": "es2020",
    "rootDir": "src",
    "outDir": "./dist",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "composite": true
  },
  "include": ["src", "script"],
  "exclude": ["dist"],
  "compileOnSave": true
}
