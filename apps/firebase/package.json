  "main": "dist/index.js",
  "scripts": {
    "preserve": "yarn run build",
    "serve": "cross-env NODE_ENV=production firebase serve -p 5001",
    "deploy:staging": "echo 'please use the deploy-chain workflow on github' && exit 1",
