  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/node": "^20.14.11",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/eslint-plugin-tslint": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "cross-env": "7.0.3",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
